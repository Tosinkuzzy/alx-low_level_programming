#include "main.h"
/**
 * _sqrt - Entry p
 * Des: Calculate natural square root.
 * @n: Int
 * #i: The possible value for the square root
 *
 * Return: -1 if negative.
 */
int _sqrt(int n, int i)
{
if ((i * i) == n)
{
return (i);
}
else if (i * i > n)
{
return (-1);
}
return (_sqrt(n, i + 1));
}
/**
 * _sqrt_recursion - Entry p
 * Des: Natural sqaure rt
 * @n: int
 * @i: The possible value for the square root
 * Return: -1 if negative
 */
int _sqrt_recursion(int n)
{

if (n < 0)
{
return (-1);
}
else if (n == 1 || n == 1)
{
return (n);
}
return (_sqrt(n, i));
}
